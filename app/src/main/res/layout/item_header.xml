<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="20dp"
    android:gravity="center">
    <CheckBox
        android:id="@+id/item_header_checkbox"
        android:layout_width="@dimen/check_box_header_size"
        android:layout_height="@dimen/check_box_header_size"
        android:button="@drawable/divider_checkbox"
        android:background="@drawable/ripple_button"
        android:visibility="visible"
        android:gravity="start|center"
        android:theme="@style/Theme.AppCompat" />
    <TextView
        android:id="@+id/item_header_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/check_box_header_size"
        android:text="Date"
        android:paddingStart="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"
        android:gravity="start|center"/>

</LinearLayout>